{
	"compilerOptions": {
		"lib": [
			"es2017",
			"es2019"
		],
		"types": [
			"node"
		],
		"module": "node16",
		"noImplicitAny": true,
		"removeComments": true,
		"strictNullChecks": true,
		"strict": true,
		"preserveConstEnums": true,
		"resolveJsonModule": true,
		"declaration": true,
		"outDir": "./dist/",
		"target": "es2019",
		"sourceMap": true,
		"esModuleInterop": true,
		"useUnknownInCatchVariables": false
	},
	"include": [
		"credentials/**/*",
		"nodes/**/*",
		"nodes/**/*.json",
		"package.json"
	],
	"exclude": [
		"node_modules", 
		"**/*.spec.ts"
	]
}
